<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#ffffff"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:text="车次："
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="33dp"
        android:text="时间："
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="排数："
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <Spinner
        android:id="@+id/spinner4"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView24"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="200dp"
        android:paddingRight="14dp"
        android:popupBackground="#008577"
        android:popupElevation="3dp"
        android:stateListAnimator="@drawable/spinner_sla"
    />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:layout_below="@+id/spinner4"
        android:layout_marginTop="35dp"
        android:text="座位："
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignLeft="@+id/spinner4"
        android:layout_alignStart="@+id/spinner4"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="200dp"
        android:paddingRight="14dp"
        android:popupBackground="#008577"
        android:popupElevation="3dp"
        android:stateListAnimator="@drawable/spinner_sla"/>


    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="已被预定座位："
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="18sp" />
    <ListView
            android:id="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView26"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/zw"
        android:layout_below="@+id/spinner5"
        android:layout_centerHorizontal="true" />




        <at.markushi.ui.CircleButton
                android:id="@+id/button7"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:src="@drawable/ic_action_tick"
                app:cb_color="#99CC00"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:cb_pressedRingWidth="8dip"/>



   <!--><Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/b"
        android:text="下一步"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/spinner5"
        android:layout_alignStart="@+id/spinner5"
        android:layout_marginBottom="10dp" /><-->



</RelativeLayout>